            if (!is.null(nearest_railway)) paste0("<br><b>Line:</b> ", nearest_railway) else "",
            if (!is.null(nearest_year)) paste0("<br><b>Year Opened:</b> ", nearest_year) else ""
          ),
          label = ~orig_name
        )
      }
      invisible(NULL)
    }
  
